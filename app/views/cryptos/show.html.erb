<p id="notice"><%= notice %></p>

<% for x in @show_crypto %>
    <% if @crypto.symbol.upcase == x["symbol"] %>
        <% crypto_name = x["name"] %>
        <% crypto_price = x["price_usd"] %>
        <% crypto_rank = x['rank'] %>
    <% end %>
<% end %>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= crypto_name %></h3>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <li class="list-group-item"><strong>Symbol:</strong> <%= @crypto.symbol %></li>
          <li class="list-group-item"><strong>User:</strong> <%= @crypto.user_id %></li>
          <li class="list-group-item"><strong>Cost per:</strong> $<%= @crypto.cost_per %></li>
          <li class="list-group-item"><strong>Current price:</strong> <%= number_to_currency(crypto_price) %></li>
          <li class="list-group-item"><strong>Rank:</strong> <%= crypto_rank %></li>
          <li class="list-group-item"><strong>Amount owned:</strong> <%= @crypto.amount_owned %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_crypto_path(@crypto), class: "btn btn-link" %> |
<%= link_to 'Delete', crypto_path(@crypto), class: "btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Back', cryptos_path, class: "btn btn-link" %>
