<h3>Crypto Currency Lookup</h3>

<%= form_tag home_lookup_path, class: "form-inline", :method => 'POST' do %>
    <div class="form-group">
        <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol', size: 50, class: "form-control" %>
        <%= submit_tag 'Lookup Stock Quote', class: "btn btn-primary" %>
    </div>
<% end %>

<br/><br/>

<% if @symbol %>
    <% for x in @lookup_coin %>
        <% if @symbol == x["symbol"] %>
            <%= @symbol %> <%= x["name"] %>: $<%= x["price_usd"] %><br/>
        <% end %>
    <% end %>
<% end %>